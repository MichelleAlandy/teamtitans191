<!DOCTYPE html>
<html>
  <head>
    <title>Fria2</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <%= link_to "Return to Home", home_page_path  %>
  <% if user_signed_in? %>
  <%= form_tag do %>
    <%= radio_button_tag :curr_type, 'Researcher'%>
    <%= label :curr_type_researcher, 'Researcher' %>
    <%= radio_button_tag :curr_type, 'Dean' %>
    <%= label :curr_type_dean, 'Dean' %>
    <%= radio_button_tag :curr_type, 'Admin' %>
    <%= label :curr_type_admin, 'Admin' %>
    <%= radio_button_tag :curr_type, 'Committee Member'%>
    <%= label :curr_type_committee_member, 'Committee Member' %>
    <%= submit_tag "Submit" %>
  <% end %>
  <% end %>
  </br>
  <body>
    <%= yield %>
    <div id= "user_nav">
  	<% if user_signed_in? %>
     Signed in as <%= current_user.email %>. Not you?
     <%= link_to "Sign out", destroy_user_session_path, :method => :delete %>
   <% else %>
<!--      <%= link_to "Sign up", new_user_registration_path %> or
 -->     <%= link_to "Sign in", new_user_session_path %>
   <% end %>
 	</div>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
  </body>
</html>
